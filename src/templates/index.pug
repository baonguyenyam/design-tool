extends _layout/layout

//- Các giá trị mặc định cho trang web
block variables
	- var title = 'Home'
	- var description = 'Description for home page'
	- var bodyclass = 'home'

//- Phần khai báo body
block body
	#loading
		.bar Đang tải dữ liệu...
		.progress
			.progress-bar.progress-bar-striped.bg-secondary.progress-bar-animated(role="progressbar" aria-valuenow="100" style="width: 100%" aria-valuemin="0" ariavaluemax="100")

	section.canhcam-design-1(ng-controller="mainControl")
		.container-fluid-full
			.row.no-gutters
				.col-8
					.box-product
						.showloading-material(ng-class="{'active':showloadingmaterial}")
							.inner
								i.fa.fa-sync.fa-spin.mr-1
								| 
								| {{lang.loading}}
						.apply-content 
							figure.border
								img.img-fluid(src="./img/phoicanh.png")
							p.lead.mb-0 {{data.desc}}
						//- .dsfdsf
							img.img-1(src="http://www.abbeyjfitzgerald.com/wp-content/uploads/2016/07/forest-example-square.jpg" alt="demo-clip-triangle-equilateral")
							img.img-2(src="http://www.abbeyjfitzgerald.com/wp-content/uploads/2016/07/forest-example-square.jpg" alt="demo-clip-triangle-equilateral")
					.control-bar
						ul.nav.mb-0
							li.nav-item 
								a(href="#")
									i.fab.fa-facebook-f.fa-fw
									| 
									| {{lang.share}}
							li.nav-item 
								a(href="#")
									i.fas.fa-save.fa-fw
									| 
									| {{lang.save}}
							li.nav-item 
								a(href="#")
									i.fas.fa-shopping-cart.fa-fw
									| 
									| {{lang.booking}}
							li.nav-item.toggle
								a(href="#")
									em.fas.fa-angle-double-down.fa-fw
				.col-4.select(ng-controller="getMenuMaterial")
					.select-color
						ul
							//- Title Menu 
							//- li.item.title {{lang.pattern}}
							li.item(ng-repeat="item in menus" uib-tooltip="Enter something in this input field to disable this tooltip" tooltip-placement="top")
								a(href="#" onclick="toggleMenu(this)" ng-click="ctrlClickHandler(item)") 
									em(ng-bind-html="item.icon | html")
									span {{item.name}}
					.select-nav
						.showloading(ng-class="{'active': showloading}") 
							.inner.text-center
								figure
									img(src="./img/logo.png", alt="")
								.lo
									i.fa.fa-sync.fa-spin.mr-1
									| 
									| {{lang.loading}}
						//- Breadcrumb
						//- nav(ng-show="materials.length")
							ol.breadcrumb
								li.breadcrumb-item 
									i.fa.fa-home
								li.breadcrumb-item.active {{lang.material}}
						.select-nav-color
							//- Tiêu đề
							//- h3.h5.mt-2.mb-0(ng-show="materials.length") {{title}}
							.notice.mt-3(ng-show="!materials.length && !showloading") 
								h4.h4.mb-2 {{lang.noitem}}
								p.lead {{lang.notice}}
							ul.list-item
								li.item(ng-repeat="item in lists")
									a(href="#" onclick="toggleMenu(this)" ng-click="setPattern(item)") 
										.color(ng-style="{'background':'linear-gradient(127deg, '+item.color[0]+' 0%, '+item.color[0]+' 50%, '+item.color[1]+' 50%, '+item.color[1]+' 100%)'}", ng-if="item.color.length > 1")
										.color(ng-style="{'background':''+item.color[0]+''}", ng-if="item.color.length == 1")
										.text 
											strong {{item.name}}
											span {{item.code}}
							//- Phân trang
							//- .pagebottom(ng-show="materials.length")
								.row.align-items-center
									.col-auto.d-flex.align-items-center
										.mr-2.tl {{lang.itempage}}
										select.form-control.form-control-sm(ng-model="viewby" ng-change="setItemsPerPage(viewby)"  ng-options="item as item.name for item in select")
									.col.justify-content-end.d-flex
										ul.mb-0.pagination(uib-pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()" items-per-page="itemsPerPage" next-text="Trang kế", previous-text="Trang trước")
